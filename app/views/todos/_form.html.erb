<%= form_with(model: todo, local: true, html: { class: "uk-form-horizontal" }) do |form| %>
  <% if todo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
      <% todo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="uk-margin">
  <label class="uk-form-label">
    <%= form.label :user_id %>
  </label>
  <div class="uk-form-controls">
    <%= form.number_field :user_id, id: :todo_user_id, class: 'uk-input uk-form-width-medium' %>
  </div>
</div>
<div class="uk-margin">
  <label class="uk-form-label">
    <%= form.label :title %>
  </label>
  <div class="uk-form-controls">
    <%= form.text_field :title, id: :todo_title, class: 'uk-input uk-form-width-medium' %>
  </div>
</div>
<div class="uk-margin">
  <label class="uk-form-label">
    <%= form.label :note %>
  </label>
  <div class="uk-form-controls">
    <%= form.text_area :note, id: :todo_note, class: 'uk-textarea uk-form-width-large' %>
  </div>
</div>
<div class="uk-margin">
  <label class="uk-form-label">
    <%= form.label :due_date %>
  </label>
  <div class="uk-form-controls">
    <%= form.date_select :due_date, {}, { id: :todo_due_date, class: 'uk-select uk-form-width-small' } %>
  </div>
</div>
<div class="uk-margin">
  <label class="uk-form-label">
    <%= form.label :completed_on %>
  </label>
  <div class="uk-form-controls">
    <%= form.date_select :completed_on, {}, { id: :todo_completed_on, class: 'uk-select uk-form-width-small' } %>
  </div>
</div>
<div class="uk-margin">
  <label class="uk-form-label">
    <%= form.label :repeat %>
  </label>
  <div class="uk-form-controls">
    <%= form.number_field :repeat, id: :todo_repeat, class: 'uk-input uk-form-width-medium' %>
  </div>
</div>
<div class="uk-margin">
  <label class="uk-form-label">
    <%= form.label :urgent %>
  </label>
  <div class="uk-form-controls">
    <%= form.check_box :urgent, id: :todo_urgent, class: 'uk-checkbox uk-form-width-medium' %>
  </div>
</div>

<div class="uk-margin">
  <%= form.submit nil, class: 'uk-button uk-button-primary' %>
</div>
<% end %>
