<% content_for :title do %>
  <%= Todo.model_name.human %>
<% end %>

<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<table class="uk-table uk-table-striped">
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Note</th>
      <th>Due date</th>
      <th>Completed on</th>
      <th>Repeat</th>
      <th>Urgent</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.user_id %></td>
        <td><%= todo.title %></td>
        <td><%= todo.note %></td>
        <td><%= todo.due_date %></td>
        <td><%= todo.completed_on %></td>
        <td><%= todo.repeat %></td>
        <td><%= todo.urgent %></td>
        <td><%= link_to 'Show', todo %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path %>
