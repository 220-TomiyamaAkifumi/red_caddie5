  <% if flash.present? %>
    <div class="uk-card uk-card-default">
      <% if flash[:notice] %>
      <div class="uk-alert-success" uk-alert>
        <a class="uk-alert-close" uk-close></a>
        <p id='notice'><%= notice %></p>
      </div>
      <% end %>
      <% if flash[:alert] %>
      <div class="uk-alert-danger" uk-alert>
        <a class="uk-alert-close" uk-close></a>
        <p id="alert"><%= alert %></p>
      </div>
      <% end %>
    </div>
  <% end %>
